<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Laboratoire04.Views.ListContactView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#333">

    <CollectionView x:Name="ContactListCollectionView" ItemsSource="{Binding contacts}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Label
                        Padding="10"
                        FontAttributes="Bold"
                        TextColor="White"
                        VerticalTextAlignment="Center">
                        <Label.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="Prenom" />
                                <Binding Path="Nom" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>