<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Laboratoire04.Views.ListContactView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModel="clr-namespace:Laboratoire04.ViewModels"
    BackgroundColor="#333">

    <CollectionView x:Name="ContactListCollectionView" ItemsSource="{Binding contacts}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame
                    Padding="10"
                    BackgroundColor="#222"
                    BorderColor="Black">
                    <StackLayout VerticalOptions="Center">
                        <Label
                            FontAttributes="Bold"
                            TextColor="White"
                            VerticalTextAlignment="Center">
                            <Label.Text>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="Prenom" />
                                    <Binding Path="Nom" />
                                </MultiBinding>
                            </Label.Text>
                        </Label>
                        <Label Text="{Binding TelephonePersonnel}" TextColor="#d3d3d3" />
                        <Label Text="{Binding CourrielPersonnel}" TextColor="#d3d3d3" />
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:ListContactViewModel}}, Path=TapCmd}"
                            CommandParameter="{Binding .}"
                            NumberOfTapsRequired="1" />
                    </Frame.GestureRecognizers>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>

<!--  Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:ListContactViewModel}}, Path=TapGestureRecognizer_Tapped}"  -->